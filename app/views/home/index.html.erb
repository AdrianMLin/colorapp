<input id="user_id" type="hidden" name="user_id" value="<%=session[:user_id]%>">


<!-- Userbar - searching, message, and template -->
<nav id="navbar-user-tasks"class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container-fluid">
   


    <div class"top-left">
      <!-- searchbar -->
      <navbar id="searchbar" class="navbar-leftside">

        <input id="app-search-input" type="text" placeholder="Search for an App!">

        <button type="button" class="btn btn-default" id="app-search-button"><span class="sort glyphicon glyphicon-search"></span></button>

      </navbar>

      <navbar id="navbar-links" class="navbar-leftside">
        <ul>

          <li><h5 class="navbar-links-item" id="navbar-about" href="#"> About </h5></li>
          <li><h5 class="navbar-links-item" id="navbar-contact" href="#"> Contact </h5></li>
          <!-- message -->
          <li>
            <h5 id="message-search"><span id="message-price">All</span> <span id="message-color"></span> <span id="message-genre"></span> <span id="message-view">apps</span></h5>
          </li>
        </ul>
      </navbar>
    </div>






    <div class="top-center">
      <!-- title -->
      <img id="title-colorappin" src="/assets/colorappin-title-shrunk-upped.png" alt="">

    </div>
    





    <div class="top-right">
  
      <navbar id="navbar-account" class="navbar-rightside">
        <ul>
          <%if session[:user_id]%> <!-- these appear if logged in -->

            <li><button title="Go to your profile" id="profile-page" class="btn btn-default"><span class="glyphicon glyphicon-user"></span></button></li>

            <li> <!--logout button-->
              <form action="/session" method="POST">
                <input type="hidden" name="_method" value="DELETE">
                <input name="authenticity_token" value="<%= form_authenticity_token() %>" type="hidden">
                <button title="Log out" id="logout-button"  type="submit" class="btn btn-default"><span class="glyphicon glyphicon-log-out"></span></button>
              </form>
            </li>
            
          <%else%> <!-- these appear if you're not logged in -->

            <li> <!-- log in -->
              <form id="signup-button-form" action="/login" method="POST">
                <input type="text" name="email" placeholder="Email">
                <input type="password" name="password" placeholder="Password">
                <input name="authenticity_token" value="<%= form_authenticity_token() %>" type="hidden">
                <button title="Log in" type="submit" class="btn btn-default"><span class="glyphicon glyphicon-log-in"></span></button>
              </form>
            </li>
            <li><a href="/users/new"> <button id="signup-button" type="submit" class="btn btn-default">Sign up</button></a></li>

          <%end%>
        </ul>
      </navbar>

      <!-- template menu -->
      <navbar id="template-menu" class="navbar-rightside">
        <ul>
        <!-- template menu - name this template -->
          <li><input id="template-name-input" class="invisible" type="text" name="template_name" placeholder="Name this template!"></li>

           <!-- template menu - show button -->
          <li><button title="Show/hide template" type="button" class="btn btn-default" id="template-show-button"><span class="glyphicon glyphicon-phone"></span></button></li>

          <!-- template menu - template new button -->
          <li><button title="Show/hide template menu" class="btn btn-default" id="template-new-button"><span class="glyphicon glyphicon-plus"></button></li>

          <!-- template menu - save button -->
          <li><button title="Save as new template" type="button" class="btn btn-default" id="template-save-button"><span class="glyphicon glyphicon-save"></span></button></li>

          <!-- template menu - template select button -->        
          <li><button title="Load selected template" class="btn btn-default" id="template-select-button"><span class="glyphicon glyphicon-folder-open"></span></button></li>
          <!-- template menu - select -->
          <li><select title="show previous templates" name="template_id" id="template-select"><!-- user id is session-->
            <%if templates%>
              <%templates.each do |t|%>
                <option value="<%=t['id']%>"><%=t.name%></option>
              <%end%>
            <%end%>
          </select></li>   

          <!-- template menu - template delete button -->
          <li><button id="template-delete-button" class="btn btn-default invisible"><span title="Delete selected template" class="glyphicon glyphicon-remove" ></span></button></li>
      
        </ul>
      </navbar>

    </div>




  </div>
</nav>



