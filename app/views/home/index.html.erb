<input id="user_id" type="hidden" name="user_id" value="<%=session[:user_id]%>">
<header id="title-header">
  <div id="top-title">


    <li> <!-- left-side navbar search -->
      <form action="#" class="navbar-form navbar-left" role="search">
        <div class="form-group">
          <input id="app-search-input" type="text" class="form-control" placeholder="Search for an App!">
        </div>
        <button type="button" class="btn btn-default" id="app-search-button"><span class="sort glyphicon glyphicon-search"></span></button>
      </form>
    </li>

    <!-- title -->
    <h1>ColorApp.in</h1>

    <!-- right side navbar -->
    <div class="navbar-form navbar-right custom-navbar-right">
      <ul>
        <%if session[:user_id]%> <!-- these appear if logged in -->
          <li><a href="/users/<%=session[:user_id]%>">My Profile</a></li>

          <li> <!--logout button-->
            <form action="/session" method="POST">
              <input type="hidden" name="_method" value="DELETE">
              <input name="authenticity_token" value="<%= form_authenticity_token() %>" type="hidden">
              <button id="logout-button"  type="submit" class="btn btn-default">Log out</button>
            </form>
          </li>
          
        <%else%> <!-- these appear if you're not logged in -->
          <li><a href="/users/new"> <button id="signup-button" type="submit" class="btn btn-default">Sign up</button></a></li>

          <li> <!-- log in -->
            <form action="/login" method="POST">
              <input type="text" name="email" placeholder="Email">
              <input type="password" name="password" placeholder="Password">
              <input name="authenticity_token" value="<%= form_authenticity_token() %>" type="hidden">
               <button type="submit" class="btn btn-default">Log in</button>
            </form>
          </li>
        <%end%>
      </ul>
    </div>

  </div>


  <navbar id="navbar-links">
    <ul>
      <li><h5 class="navbar-links-item" id="navbar-home" > Home </h5></li>
      <li><h5 class="navbar-links-item" id="navbar-all-users" > All Users</h5></li> 
      <li><h5 class="navbar-links-item" id="navbar-about" href="#"> About </h5></li>
      <li><h5 class="navbar-links-item" id="navbar-contact" href="#"> Contact </h5></li>
      

      <li> <!--template menu--> 
        <button class="template-menu btn btn-default" id="template-menu-show"><span class="glyphicon glyphicon-phone"></button>
      </li>
      <li>
        <div class="template-menu invisible" id="template-menu">
          <button type="button" class="btn btn-default" id="template-show-button"><span class="glyphicon glyphicon-plus "></span></button>

          <button type="button" class="btn btn-default" id="template-save-button"><span class="glyphicon glyphicon-save"></span></button>

          <input id="template-name-input" class="hide" type="text" name="template_name" placeholder="Name this template!">

          <select name="template_id" id="template-select"><!-- user id is session-->
            <%if templates%>
              <%templates.each do |t|%>
                <option value="<%=t['id']%>"><%=t.name%></option>
              <%end%>
            <%end%>
          </select>                
          <button class="btn btn-default" id="template-select-button"> Show </button>
        </div>


      </li>
    </ul>




  </navbar>
</header>
<%= render 'home/navbar_sorting' %>



